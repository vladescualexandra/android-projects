<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16sp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <TextView
        android:id="@+id/main_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/main_row_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/main_row_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/main_row_clasificare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clasificare" />

    <Button
        android:id="@+id/main_row_editare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editare" />
    </LinearLayout>
</androidx.cardview.widget.CardView>